<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMauiAppShell.MainPage"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to Blazor Microfrontends MAUI"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="This sample app demonstrates how to integrate Blazor Microfrontends with .NET MAUI"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to Blazor Microfrontends MAUI"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="OpenMicrofrontendsBtn"
                Text="View Microfrontends"
                SemanticProperties.Hint="Opens the microfrontends page"
                Clicked="OnOpenMicrofrontendsClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage> 